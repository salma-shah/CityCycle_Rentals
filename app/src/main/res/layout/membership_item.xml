<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50dp"
    android:padding="10dp"
    android:layout_margin="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:text="Price"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary_colour" />

        <TextView
            android:id="@+id/tvMembershipDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:text="/duration"
            android:textSize="22sp"
            android:textColor="@color/primary_colour"/>

        <TextView
            android:id="@+id/tvMembershipType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membership Type"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMembershipDetail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Membership Detail 1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMembershipDetail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Membership Detail 2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMembershipDetail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Membership Detail 3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMembershipDetail4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Membership Detail 4"
            android:textSize="16sp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>