<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="450dp"
    android:layout_margin="8dp"
    android:background="@color/bg_colour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgPromotion"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tvPromotionDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promotion Details"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingTop="4dp" />

        <Button
            android:id="@+id/btnPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promotion Button"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/primary_colour"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
